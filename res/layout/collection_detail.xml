<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/collection_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/default_collection_preview">
  <ProgressBar
    android:id="@+id/collection_detail_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@android:style/Widget.ProgressBar.Small"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true" />
  <LinearLayout
    android:layout_height="130dip"
    android:layout_width="fill_parent"
    android:background="@drawable/black_bg"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <LinearLayout
      android:layout_height="30dip"
      android:layout_width="fill_parent"
      android:background="@drawable/black_bg">
    </LinearLayout>
    <LinearLayout
      android:layout_height="100dip"
      android:layout_width="fill_parent"
      android:background="#000000"
      android:padding="15dip"
      android:orientation="vertical">
      <TextView
        android:id="@+id/placeTitle"
        android:text="Title Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp">
      </TextView>
      <TextView
        android:id="@+id/placeSubTitle"
        android:text="Subtitle Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp">
      </TextView>
    </LinearLayout>
  </LinearLayout>
  <Button
    android:id="@+id/collection_action_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/download_icon"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true">
  </Button>
</RelativeLayout>
