<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  
  <CheckBoxPreference
    android:key="local_mode"
    android:title="@string/local_mode_title"
    android:summary="@string/local_mode_summary"
    android:defaultValue="true" />
  
  <ListPreference
    android:key="collection"
    android:title="@string/collection_title"
    android:summary="@string/collection_summary"
    android:defaultValue="sf"
    android:entries="@array/collections"
    android:entryValues="@array/collection_values" />
    
</PreferenceScreen>
